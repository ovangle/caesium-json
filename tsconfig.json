{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "declaration": true,
    "noLib": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist",

    "typeRoots": [
          "node_modules/@types"
    ]

  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
