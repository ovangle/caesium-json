{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "declaration": true,
    "noLib": false,
    "outDir": "dist/.build",
    "sourceMap": false,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
